---
import { Image } from 'astro:assets';

const content = {
  label: "Event Productie",
  heading: {
    line1: "DEMOL",
    highlight: "EVENTS."
  },
  description: "We creÃ«ren, produceren en realiseren evenementen die bijblijven. Van concept tot uitvoering, wij regelen het.",
  bgImage: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/Schermafbeelding+2018-08-05+om+14.11.25-2880w.jpg"
};
---

<section class="relative min-h-[100dvh] w-full flex items-center overflow-hidden">
  
  {/* Cinematic Background */}
  <div class="absolute inset-0 z-0">
     <div class="absolute inset-0 bg-gradient-to-r from-white via-white/80 to-transparent z-10"></div>
     <div class="absolute inset-0 bg-white/40 z-10 mix-blend-overlay"></div>
     
     <img 
      src={content.bgImage}
      alt="DeMol Events Atmosphere" 
      class="w-full h-full object-cover animate-subtle-zoom will-change-transform"
      style="object-position: center 20%;"
    />
  </div>

  <div class="container relative z-20 px-6 mx-auto h-full flex flex-col justify-center">
    
    {/* Content Card / Area */}
    <div class="max-w-3xl space-y-8 animate-slide-up opacity-0 fill-mode-forwards" style="animation-delay: 0.2s;">
      
      {/* Label */}
      <div class="flex items-center gap-4">
        <span class="w-12 h-[2px] bg-dme-teal"></span>
        <span class="text-dme-teal font-bold tracking-widest uppercase text-sm">
          {content.label}
        </span>
      </div>

      {/* Headline */}
        <h1 class="text-6xl md:text-8xl font-heading font-black tracking-tight leading-[0.9] text-gray-900">
          <span class="block text-transparent bg-clip-text bg-gradient-to-br from-gray-900 to-gray-600">
            {content.heading.line1}
          </span>
          <span class="block text-dme-teal">
            {content.heading.highlight}
          </span>
        </h1>

        <p class="text-xl md:text-2xl text-gray-700 max-w-xl leading-relaxed font-medium">
          {content.description}
        </p>

      {/* Actions */}
      <div class="flex flex-col sm:flex-row items-start gap-6 pt-4">
          <a href="#contact" class="group relative px-8 py-4 bg-dme-teal text-white font-bold text-lg rounded-full overflow-hidden transition-all hover:scale-105 active:scale-95 shadow-xl shadow-dme-teal/20">
            <span class="relative z-10 flex items-center gap-2">
              Start jouw project
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
            </span>
            <div class="absolute inset-0 bg-dme-teal-dark transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          </a>
          
          <a href="#portfolio" class="px-8 py-4 rounded-full border-2 border-gray-200 text-gray-700 font-bold hover:border-dme-teal hover:text-dme-teal transition-all bg-white/50 backdrop-blur-sm">
            Bekijk portfolio
         </a>
      </div>

    </div>
  </div>

  {/* Scroll Indicator */}
  <div class="absolute bottom-10 left-10 animate-bounce-slow">
    <div class="flex items-center gap-4 text-gray-400">
        <span class="w-[1px] h-12 bg-gray-300"></span>
        <span class="text-xs uppercase tracking-widest rotate-90 origin-left translate-y-2">Scroll</span>
    </div>
  </div>

</section>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
  
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes subtle-zoom {
    0% { transform: scale(1.1); }
    50% { transform: scale(1.15); }
    100% { transform: scale(1.1); }
  }

  @keyframes float-slow {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
  }

  @keyframes float-medium {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(-2deg); }
  }

  .animate-slide-up {
    animation: slide-up 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .animate-subtle-zoom {
    animation: subtle-zoom 20s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }

  .animate-float-medium {
    animation: float-medium 6s ease-in-out infinite;
  }
  
  .fill-mode-forwards {
    animation-fill-mode: forwards;
  }
</style>
