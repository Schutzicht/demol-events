---
import { Image } from 'astro:assets';

const content = {
  label: "Event Productie",
  heading: {
    line1: "DEMOL",
    highlight: "EVENTS."
  },
  description: "We creÃ«ren, produceren en realiseren evenementen die bijblijven. Van concept tot uitvoering, wij regelen het.",
  bgImage: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/Schermafbeelding+2018-08-05+om+14.11.25-2880w.jpg"
};
---

<section class="relative min-h-[100dvh] w-full flex items-center overflow-hidden bg-gray-50/50">
  
  {/* Blurry Background Layer */}
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-white/60 z-10"></div>
    <img 
      src={content.bgImage}
      alt="" 
      class="w-full h-full object-cover blur-[100px] scale-125 opacity-50"
    />
  </div>
  
  <div class="container mx-auto px-6 h-full relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20 h-full pt-20 lg:pt-0">
      
      {/* Left Content - Clean & Stong */}
      <div class="w-full lg:w-1/2 flex flex-col justify-center space-y-8 z-10 order-2 lg:order-1 pb-20 lg:pb-0">
        
        <div class="flex items-center gap-4 animate-slide-up opacity-0 fill-mode-forwards" style="animation-delay: 0.1s;">
          <span class="w-12 h-[2px] bg-dme-teal"></span>
          <span class="text-dme-teal font-bold tracking-widest uppercase text-sm">
            {content.label}
          </span>
        </div>

        <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-black tracking-tight leading-[0.9] text-gray-900 animate-slide-up opacity-0 fill-mode-forwards" style="animation-delay: 0.2s;">
          DEMOL<br/>
          <span class="text-dme-teal">EVENTS.</span>
        </h1>

        <p class="text-xl text-gray-600 max-w-lg leading-relaxed font-medium animate-slide-up opacity-0 fill-mode-forwards" style="animation-delay: 0.3s;">
          {content.description}
        </p>

        <div class="flex flex-wrap gap-4 pt-4 animate-slide-up opacity-0 fill-mode-forwards" style="animation-delay: 0.4s;">
            <a href="#contact" class="group relative px-8 py-4 bg-dme-accent text-white font-bold text-lg rounded-full overflow-hidden transition-all hover:scale-105 active:scale-95 shadow-xl shadow-dme-accent/20">
              <span class="relative z-10 flex items-center gap-2">
                Start project
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
              </span>
              <div class="absolute inset-0 bg-dme-accent-dark transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
            </a>
            
            <a href="#portfolio" class="px-8 py-4 rounded-full border-2 border-gray-200 text-gray-900 font-bold hover:border-dme-teal hover:text-dme-teal transition-all bg-transparent">
              Bekijk werk
           </a>
        </div>

        <div class="pt-8 flex items-center gap-4 text-sm font-bold text-gray-400 animate-slide-up opacity-0 fill-mode-forwards" style="animation-delay: 0.5s;">
           <span>PREMIUM PARTNER VAN</span>
           <div class="flex -space-x-2">
              <div class="w-8 h-8 rounded-full bg-gray-200 border-2 border-white"></div>
              <div class="w-8 h-8 rounded-full bg-gray-300 border-2 border-white"></div>
              <div class="w-8 h-8 rounded-full bg-gray-400 border-2 border-white"></div>
           </div>
        </div>

      </div>

      {/* Right Image - Dynamic Layout */}
      <div class="w-full lg:w-1/2 relative h-[50vh] lg:h-auto lg:aspect-square flex items-center justify-center order-1 lg:order-2">
         
         <div class="absolute inset-0 bg-dme-teal/5 rounded-[3rem] transform rotate-6 scale-90 -z-10"></div>
         
         <div class="relative w-full h-full max-h-[80vh] rounded-[2rem] overflow-hidden shadow-2xl animate-scale-in">
            <img 
              src={content.bgImage}
              alt="DeMol Events Atmosphere" 
              class="w-full h-full object-cover"
            />
            
            {/* Floating Badge */}
            <div class="absolute bottom-8 left-8 bg-white/90 backdrop-blur-md p-6 rounded-2xl shadow-lg max-w-xs animate-float-slow hidden md:block">
               <div class="flex items-center gap-3 mb-2">
                  <div class="w-3 h-3 rounded-full bg-dme-accent animate-pulse"></div>
                  <span class="text-xs font-bold uppercase tracking-wider text-gray-500">Nu beschikbaar</span>
               </div>
               <p class="font-heading font-bold text-lg text-gray-900">Klaar voor jouw volgende succes?</p>
            </div>
         </div>

      </div>

    </div>
  </div>
</section>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
  
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes subtle-zoom {
    0% { transform: scale(1.1); }
    50% { transform: scale(1.15); }
    100% { transform: scale(1.1); }
  }

  @keyframes float-slow {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
  }

  @keyframes float-medium {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(-2deg); }
  }

  .animate-slide-up {
    animation: slide-up 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .animate-subtle-zoom {
    animation: subtle-zoom 20s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }

  .animate-float-medium {
    animation: float-medium 6s ease-in-out infinite;
  }
  
  .fill-mode-forwards {
    animation-fill-mode: forwards;
  }
</style>
