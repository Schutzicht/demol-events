---
import FadeIn from './ui/FadeIn';

const reviews = [
  {
    name: "Janine van der Horst",
    role: "PZEM",
    quote: "Ilse regelt het gewoon. Punt. Geen stress, volledige ontzorging en een fantastisch resultaat.",
    initial: "J"
  },
  {
    name: "Mark van den Berg",
    role: "Directeur",
    quote: "De Mol Events snapt precies wat wij nodig hebben. Professioneel, creatief en altijd vrolijk.",
    initial: "M"
  },
   {
    name: "Sophie de Vries",
    role: "Marketing Manager",
    quote: "Onze open dag was een enorm succes dankzij de strakke organisatie van Ilse. Aanrader!",
    initial: "S"
  },
  {
    name: "Peter Jansen",
    role: "Gemeente Rotterdam",
    quote: "Een partner die meedenkt en net dat stapje extra zet. De samenwerking was vlekkeloos.",
    initial: "P"
  },
  {
    name: "Elise Bakker",
    role: "Event Co√∂rdinator",
    quote: "Creatieve concepten die echt werken. Onze gasten praten er nog steeds over.",
    initial: "E"
  }
];

// Duplicate reviews to create seamless loop
const allReviews = [...reviews, ...reviews];
---

<section class="py-20 md:py-32 bg-gray-50 overflow-hidden">
  <div class="container mx-auto px-4 mb-16 text-center">
      <FadeIn client:visible direction="down">
        <h2 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 mb-6">
          Wat anderen <span class="text-dme-teal">zeggen</span>.
        </h2>
        <p class="text-gray-600 max-w-xl mx-auto text-lg">
           Trots op de mooie woorden van onze opdrachtgevers. Daar doen we het voor.
        </p>
      </FadeIn>
  </div>

  <div class="relative w-full">
    {/* Gradient Masks for Fade Affect */}
    <div class="absolute left-0 top-0 bottom-0 w-8 md:w-32 bg-gradient-to-r from-gray-50 to-transparent z-20 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-8 md:w-32 bg-gradient-to-l from-gray-50 to-transparent z-20 pointer-events-none"></div>

    <div class="flex overflow-x-auto snap-x snap-mandatory scrollbar-hide px-6 md:px-0 gap-4 md:gap-8 py-4 md:animate-marquee md:hover:pause-animation">
      {allReviews.map((review, index) => (
        <div class="shrink-0 w-[80vw] md:w-[400px] snap-center group first:pl-0 last:pr-6 md:first:pl-0 md:last:pr-0">
          <div class="bg-white p-6 md:p-8 rounded-[2rem] shadow-xl shadow-gray-200/50 border border-gray-100 h-full flex flex-col justify-between transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:border-dme-teal/30 relative overflow-hidden">
             
             {/* Decor */}
             <div class="absolute top-0 right-0 w-24 h-24 bg-dme-teal/5 rounded-bl-[4rem] transition-colors group-hover:bg-dme-teal/10"></div>

            <div class="relative z-10">
              <div class="flex gap-1 mb-4 md:mb-6">
                 {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 md:w-5 md:h-5 text-yellow-400 fill-current" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                 ))}
              </div>
              <p class="text-gray-700 text-base md:text-xl font-medium leading-relaxed mb-6 md:mb-8 line-clamp-4 md:line-clamp-none">
                "{review.quote}"
              </p>
            </div>
            
            <div class="flex items-center gap-3 md:gap-4 mt-auto border-t border-gray-50 pt-4 md:pt-6 relative z-10">
              <div class="w-10 h-10 md:w-12 md:h-12 bg-gray-900 text-white rounded-full flex items-center justify-center font-bold text-lg md:text-xl shadow-lg ring-4 ring-gray-50 group-hover:bg-dme-teal transition-colors shrink-0">
                {review.initial}
              </div>
              <div>
                <h4 class="font-bold text-gray-900 text-sm md:text-base leading-tight">{review.name}</h4>
                <p class="text-xs md:text-sm text-dme-teal font-medium">{review.role}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <style>
      .hover\:pause-animation:hover {
          animation-play-state: paused;
      }
  </style>
</section>
