---
import FadeIn from './ui/FadeIn';

const reviews = [
  {
    name: "Janine van der Horst",
    role: "PZEM",
    quote: "Ilse regelt het gewoon. Punt. Geen stress, volledige ontzorging en een fantastisch resultaat."
  },
  {
    name: "Mark van den Berg",
    role: "Directeur",
    quote: "De Mol Events snapt precies wat wij nodig hebben. Professioneel, creatief en altijd vrolijk."
  },
   {
    name: "Sophie de Vries",
    role: "Marketing Manager",
    quote: "Onze open dag was een enorm succes dankzij de strakke organisatie van Ilse. Aanrader!"
  }
];
---

<section class="py-12 md:py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <FadeIn client:visible direction="down">
        <h2 class="text-4xl font-heading font-bold text-gray-900 mb-4">
          Wat anderen <span class="text-dme-teal">zeggen</span>.
        </h2>
      </FadeIn>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {reviews.map((review, index) => (
        <FadeIn client:visible delay={index * 0.1}>
          <div class="bg-white p-8 rounded-2xl shadow-lg shadow-gray-200/50 border border-gray-100 relative h-full flex flex-col justify-between hover:translate-y-[-5px] transition-transform duration-300">
            <div>
              <div class="text-6xl text-dme-teal/20 font-serif leading-none mb-4">"</div>
              <p class="text-gray-700 mb-6 italic leading-relaxed">
                {review.quote}
              </p>
            </div>
            <div class="flex items-center gap-4 mt-auto">
              <div class="w-10 h-10 bg-dme-teal text-white rounded-full flex items-center justify-center font-bold shadow-md shadow-dme-teal/20">
                {review.name.charAt(0)}
              </div>
              <div>
                <h4 class="font-bold text-gray-900">{review.name}</h4>
                <p class="text-sm text-gray-500">{review.role}</p>
              </div>
            </div>
          </div>
        </FadeIn>
      ))}
    </div>
  </div>
</section>
