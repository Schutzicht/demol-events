---
import FadeIn from './ui/FadeIn';
import { Sparkles, Users, Presentation, Calendar, Briefcase, Star } from 'lucide-react';

const services = [
  {
    icon: Sparkles,
    title: "Feesten",
    description: "Van personeelsfeest tot jubileum: wij maken er een knalfeest van waar nog lang over nagepraat wordt."
  },
  {
    icon: Users,
    title: "Recepties",
    description: "Professionele ontvangsten en netwerkborrels, tot in de puntjes verzorgd voor jouw gasten."
  },
  {
    icon: Presentation,
    title: "Seminars",
    description: "Inhoudelijke sessies en congressen. Wij regelen de techniek, locatie en flow van de dag."
  },
  {
    icon: Calendar,
    title: "Open Dagen",
    description: "Laat je bedrijf zien aan het grote publiek. Wij co√∂rdineren de logistiek en beleving."
  },
  {
    icon: Briefcase,
    title: "Beurzen",
    description: "Opvallen op een beurs? Wij ontwerpen en managen jouw stand en presence."
  },
  {
    icon: Star,
    title: "Event op Maat",
    description: "Een uniek idee? Wij denken graag mee en realiseren concepten die net even anders zijn."
  }
];
---

<section id="diensten" class="py-20 md:py-32 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="md:flex md:justify-between md:items-end mb-16">
       <FadeIn client:visible direction="right">
        <h2 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 mb-6">
          Onze <span class="text-dme-teal">Expertise</span>.
        </h2>
       </FadeIn>
       <FadeIn client:visible direction="left" delay={0.2} className="hidden md:block">
          <p class="text-gray-600 max-w-sm text-right">
            Van concept tot realisatie. Wij regelen alles tot in de puntjes, zodat jij tijd hebt voor je gasten.
          </p>
       </FadeIn>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service, index) => (
        <FadeIn client:visible delay={index * 0.1}>
          <div class="group bg-white p-8 rounded-3xl border border-gray-100 shadow-xl shadow-gray-200/50 hover:shadow-2xl hover:shadow-dme-teal/10 hover:-translate-y-2 transition-all duration-300 h-full flex flex-col">
            <div class="w-14 h-14 bg-gray-50 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-dme-teal group-hover:text-white transition-colors duration-300 text-dme-teal">
              <service.icon size={28} strokeWidth={1.5} />
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-dme-teal transition-colors">{service.title}</h3>
            <p class="text-gray-600 leading-relaxed mb-8 flex-grow">
              {service.description}
            </p>
            
            <div class="mt-auto pt-6 border-t border-gray-100 flex items-center justify-between">
              <span class="text-sm font-bold text-gray-400 group-hover:text-dme-teal transition-colors">Meer info</span>
              <div class="w-8 h-8 rounded-full bg-gray-50 flex items-center justify-center group-hover:bg-dme-teal group-hover:text-white transition-all">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="-rotate-45 group-hover:rotate-0 transition-transform"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
              </div>
            </div>
          </div>
        </FadeIn>
      ))}
    </div>
  </div>
</section>
