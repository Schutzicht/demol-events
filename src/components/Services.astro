---
import FadeIn from './ui/FadeIn';
import { Sparkles, Users, Presentation, Calendar, Briefcase, Star } from 'lucide-react';

const services = [
  {
    icon: Sparkles,
    title: "Feesten",
    description: "Van personeelsfeest tot jubileum: wij maken er een knalfeest van waar nog lang over nagepraat wordt."
  },
  {
    icon: Users,
    title: "Recepties",
    description: "Professionele ontvangsten en netwerkborrels, tot in de puntjes verzorgd voor jouw gasten."
  },
  {
    icon: Presentation,
    title: "Seminars",
    description: "Inhoudelijke sessies en congressen. Wij regelen de techniek, locatie en flow van de dag."
  },
  {
    icon: Calendar,
    title: "Open Dagen",
    description: "Laat je bedrijf zien aan het grote publiek. Wij co√∂rdineren de logistiek en beleving."
  },
  {
    icon: Briefcase,
    title: "Beurzen",
    description: "Opvallen op een beurs? Wij ontwerpen en managen jouw stand en presence."
  },
  {
    icon: Star,
    title: "Event op Maat",
    description: "Een uniek idee? Wij denken graag mee en realiseren concepten die net even anders zijn."
  }
];
---

<section id="diensten" class="py-24 md:py-32 bg-dme-dark relative overflow-hidden">
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20">
       <FadeIn client:visible direction="up">
        <h2 class="text-4xl md:text-6xl font-heading font-bold text-white mb-6">
            Onze <span class="text-dme-teal">Expertise</span>.
        </h2>
        <p class="text-xl text-gray-400 font-light">
          Of het nu gaat om een zakelijk seminar of een spetterend feest, De Mol Events regelt het tot in de perfectie.
        </p>
      </FadeIn>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service, index) => (
        <FadeIn client:visible delay={index * 0.1} className="h-full">
          <div class="group h-full p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-dme-teal/50 hover:bg-white/10 transition-all duration-300">
            <div class="w-14 h-14 bg-dme-teal/20 rounded-2xl flex items-center justify-center text-dme-teal mb-6 group-hover:scale-110 group-hover:bg-dme-teal group-hover:text-white transition-all duration-300">
              <service.icon size={28} />
            </div>
            <h3 class="text-2xl font-heading font-bold text-white mb-4 group-hover:text-dme-teal transition-colors">
              {service.title}
            </h3>
            <p class="text-gray-400 group-hover:text-gray-300 transition-colors leading-relaxed">
              {service.description}
            </p>
          </div>
        </FadeIn>
      ))}
    </div>
  </div>
</section>
