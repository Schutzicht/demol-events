---
import FadeIn from './ui/FadeIn';

const projects = [
  {
    title: "Unlocked Festival",
    category: "Indoor Festival",
    image: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/Unlocked-1920w.JPG",
    cols: "md:col-span-2",
  },
  {
    title: "Waterschap Scheldestromen",
    category: "Bedrijfsevent",
    image: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/Waterschap-1920w.jpg",
    cols: "md:col-span-1",
  },
   {
    title: "100 Jaar AMZ",
    category: "Jubileum",
    image: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/AMZ-1920w.jpg",
    cols: "md:col-span-1",
  },
  {
    title: "Periscaldis",
    category: "Relatie-event",
    image: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/De+Mol+Event+-+Periscaldis+evenement-1920w.jpg",
    cols: "md:col-span-2",
  },
  {
    title: "Iwaarden Jubileum",
    category: "Bedrijfsevent",
    image: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/Iwaarden-1920w.jpg", 
    cols: "md:col-span-1",
  },
  {
    title: "Gors Feest",
    category: "Personeelsfeest",
    image: "https://lirp.cdn-website.com/3a60022f/dms3rep/multi/opt/De+Mol+Events+-+Gors-1920w.jpg",
    cols: "md:col-span-2",
  }
];
---

<section id="portfolio" class="py-12 md:py-32 bg-white">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-end mb-20 gap-8">
      <div class="max-w-2xl">
        <FadeIn client:visible direction="right">
          <div class="flex items-center gap-2 mb-4">
             <span class="w-12 h-[1px] bg-dme-teal"></span>
             <span class="text-dme-teal font-mono tracking-widest uppercase text-sm">Portfolio</span>
          </div>
          <h2 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 leading-tight">
            Ons <span class="text-transparent bg-clip-text bg-gradient-to-r from-dme-teal to-dme-teal-dark">werk</span>.
          </h2>
        </FadeIn>
      </div>
      <FadeIn client:visible direction="left" delay={0.2}>
        <a href="#contact" class="group flex items-center gap-4 text-gray-900 hover:text-dme-teal transition-colors">
          <span class="text-lg font-medium">Bekijk alle projecten</span>
          <div class="w-12 h-12 rounded-full border border-gray-200 flex items-center justify-center group-hover:border-dme-teal group-hover:bg-dme-teal group-hover:text-white transition-all shadow-sm">
             <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="-rotate-45 group-hover:rotate-0 transition-transform"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </div>
        </a>
      </FadeIn>
    </div>

    <div class="flex md:grid md:grid-cols-3 gap-6 overflow-x-auto md:overflow-visible pb-8 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-6 px-6 md:mx-0 md:px-0">
      {projects.map((project, index) => (
        <FadeIn client:visible delay={index * 0.1} className={`min-w-[85vw] md:min-w-0 h-[400px] md:h-auto md:aspect-auto ${project.cols} rounded-3xl overflow-hidden group relative cursor-pointer snap-center`}>
            {/* Image */}
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100"
            />
            
            {/* Gradient Overlay */}
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent opacity-80 transition-opacity"></div>
            
            {/* Hover Content showing up */}
            <div class="absolute inset-0 p-8 flex flex-col justify-end translate-y-0 md:translate-y-4 md:group-hover:translate-y-0 transition-transform duration-500">
              <span class="text-dme-teal font-mono text-xs uppercase tracking-widest mb-2 opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-opacity duration-500 delay-100">{project.category}</span>
              <div class="flex justify-between items-end">
                  <h3 class="text-2xl md:text-3xl font-heading font-bold text-white">{project.title}</h3>
                  <div class="w-10 h-10 bg-white text-black rounded-full flex items-center justify-center opacity-100 md:opacity-0 md:group-hover:opacity-100 scale-100 md:scale-50 md:group-hover:scale-100 transition-all duration-300">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                  </div>
              </div>
            </div>
        </FadeIn>
      ))}
    </div>
  </div>
</section>
